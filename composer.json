{
    "name": "ec-cube/ec-cube",
    "description": "EC-CUBE EC open platform.",
    "type": "project",
    "homepage": "http://www.ec-cube.net/",
    "license": [
       "GPL-2.0",
       "Commercial"
    ],
    "support": {
        "issues": "https://github.com/EC-CUBE/ec-cube/issues"
    },
    "minimum-stability": "RC",
    "require": {
        "php": ">=5.5.9",
        "silex/silex": "*",
        "silex/web-profiler": "*",
        "doctrine/orm": "*",
        "symfony/monolog-bridge": "<=3.3@rc",
        "symfony/twig-bridge": "<=3.3@rc",
        "symfony/finder": "<=3.3@rc",
        "symfony/yaml": "<=3.3@rc",
        "symfony/form": "<=3.3@rc",
        "symfony/validator": "<=3.3@rc",
        "symfony/translation": "<=3.3@rc",
        "symfony/config": "<=3.3@rc",
        "symfony/security": "<=3.3@rc",
        "symfony/doctrine-bridge": "<=3.3@rc",
        "symfony/class-loader": "<=3.3@rc",
        "symfony/css-selector": "<=3.3@rc",
        "symfony/dom-crawler": "<=3.3@rc",
        "symfony/serializer": "<=3.3@rc",
        "dflydev/doctrine-orm-service-provider": "*",
        "saxulum/saxulum-doctrine-orm-manager-registry-provider": "*",
        "saxulum/saxulum-webprofiler-provider": "*",
        "swiftmailer/swiftmailer": "5.*",
        "knplabs/knp-components": "*",
        "doctrine/migrations": "*",
        "knplabs/console-service-provider": "*",
        "nesbot/carbon": "*",
        "egulias/email-validator": "^1.2",
        "symfony/console": "<=3.3@rc",
        "symfony/debug": "<=3.3@rc",
        "symfony/filesystem": "<=3.3@rc",
        "symfony/http-foundation": "<=3.3@rc",
        "symfony/http-kernel": "<=3.3@rc",
        "symfony/intl": "<=3.3@rc",
        "symfony/options-resolver": "<=3.3@rc",
        "symfony/process": "<=3.3@rc",
        "symfony/property-access": "<=3.3@rc",
        "symfony/routing": "<=3.3@rc",
        "symfony/stopwatch": "<=3.3@rc",
        "symfony/web-profiler-bundle": "<=3.3@rc",
        "symfony/var-dumper": "<=3.3@rc",
        "symfony/debug-bundle": "<=3.3@rc",
        "symfony/inflector": "<=3.3@rc",
        "psr/log": "^1.0",
        "composer/ca-bundle": "^1.0",
        "ext-mbstring": "*",
        "sergiors/annotations-service-provider": "dev-master",
        "sergiors/routing-service-provider": "dev-master",
        "sergiors/templating-service-provider": "^2",
        "sergiors/sensio-framework-extra-service-provider": "dev-master",
        "guzzlehttp/guzzle": "^6.2",
        "symfony/event-dispatcher": "<=3.3@rc",
        "symfony/dotenv": "<=3.3@rc",
        "mobiledetect/mobiledetectlib": "~2",
        "doctrine/data-fixtures": "~1.1",
        "saxulum/saxulum-validator-provider": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "4.8.*",
        "mikey179/vfsStream": "~1",
        "fzaninotto/faker":"1.5.*",
        "phing/phing": "2.*",
        "symfony/browser-kit": "<=3.3@rc",
        "friendsofphp/php-cs-fixer": "^1.11",
        "satooshi/php-coveralls": "2.0.x-dev"
    },
    "autoload": {
        "files": [ "src/Eccube/Resource/functions/log.php" ],
        "psr-4": {
            "Eccube\\Entity\\": "app/proxy/entity",
            "Eccube\\": "src/Eccube",
            "Acme\\": "app/Acme",
            "Plugin\\": "app/Plugin",
            "Dbtlr\\MigrationProvider\\Provider\\": "src/silex-doctrine-migrations"
        },
        "exclude-from-classmap": ["**/Test/**", "**/Tests/**", "**/test/**", "**/tests/**"]
    },
    "autoload-dev" : {
        "psr-4": {
            "Eccube\\Tests\\" : "tests/Eccube/Tests"
        }
    },
    "scripts": {
        "compile": [
            "php eccube_install.php pgsql none --skip-createdb -V",
            "sed -i -e \"s|${PWD}|/app|\" ${PWD}/app/config/eccube/path.yml"
        ]
    },
    "config": {
        "platform": {
            "php": "5.5.9"
        }
    }
}
