{
    "name": "ec-cube/ec-cube",
    "description": "EC-CUBE EC open platform.",
    "type": "project",
    "homepage": "http://www.ec-cube.net/",
    "license": [
       "GPL-2.0",
       "Commercial"
    ],
    "support": {
        "issues": "https://github.com/EC-CUBE/ec-cube/issues"
    },
    "require": {
        "php": ">=5.5.9",
        "silex/silex": "*",
        "silex/web-profiler": "*",
        "doctrine/orm": "*",
        "symfony/monolog-bridge": ">=2.7,<3.2",
        "symfony/twig-bridge": ">=2.7,<3.2",
        "symfony/finder": ">=2.7,<3.2",
        "symfony/yaml": ">=2.7,<3.2",
        "symfony/form": ">=2.7,<3.2",
        "symfony/validator": ">=2.7,<3.2",
        "symfony/translation": ">=2.7,<3.2",
        "symfony/config": ">=2.7,<3.2",
        "symfony/security": ">=2.7,<3.2",
        "symfony/doctrine-bridge": ">=2.7,<3.2",
        "symfony/class-loader": ">=2.7,<3.2",
        "symfony/css-selector": ">=2.7,<3.2",
        "symfony/dom-crawler": ">=2.7,<3.2",
        "symfony/serializer": ">=2.7,<3.2",
        "dflydev/doctrine-orm-service-provider": "*",
        "saxulum/saxulum-doctrine-orm-manager-registry-provider": "*",
        "saxulum/saxulum-webprofiler-provider": "*",
        "swiftmailer/swiftmailer": "5.*",
        "knplabs/knp-components": "*",
        "doctrine/migrations": "*",
        "knplabs/console-service-provider": "*",
        "nesbot/carbon": "*",
        "egulias/email-validator": "^1.2",
        "symfony/console": ">=2.7,<3.2",
        "symfony/debug": ">=2.7,<3.2",
        "symfony/filesystem": ">=2.7,<3.2",
        "symfony/http-foundation": ">=2.7,<3.2",
        "symfony/http-kernel": ">=2.7,<3.2",
        "symfony/intl": ">=2.7,<3.2",
        "symfony/options-resolver": ">=2.7,<3.2",
        "symfony/process": ">=2.7,<3.2",
        "symfony/property-access": ">=2.7,<3.2",
        "symfony/routing": ">=2.7,<3.2",
        "symfony/stopwatch": ">=2.7,<3.2",
        "symfony/web-profiler-bundle": ">=2.7,<3.2",
        "symfony/var-dumper": ">=2.7,<3.2",
        "symfony/debug-bundle": ">=2.7,<3.2",
        "symfony/inflector": ">=2.7,<3.2",
        "psr/log": "^1.0",
        "composer/ca-bundle": "^1.0",
        "ext-mbstring": "*",
        "sergiors/annotations-service-provider": "dev-master",
        "sergiors/routing-service-provider": "dev-master",
        "sergiors/templating-service-provider": "^2",
        "sergiors/sensio-framework-extra-service-provider": "dev-master",
        "guzzlehttp/guzzle": "^6.2",
        "symfony/event-dispatcher": ">=2.7,<3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.6.*",
        "mikey179/vfsStream": "~1",
        "fzaninotto/faker":"1.*",
        "phing/phing": "2.*",
        "symfony/browser-kit": ">=2.7,<3.2",
        "friendsofphp/php-cs-fixer": "^1.11",
        "symfony/phpunit-bridge": ">=2.7,<3.2",
        "satooshi/php-coveralls": "2.0.x-dev"
    },
    "autoload": {
        "files": [ "src/Eccube/Resource/functions/log.php" ],
        "psr-4": {
            "Eccube\\": "src/Eccube",
            "Eccube2\\": "app/Eccube",
            "Plugin\\": "app/Plugin",
            "Dbtlr\\MigrationProvider\\Provider\\": "src/silex-doctrine-migrations"
        },
        "exclude-from-classmap": ["**/Test/**", "**/Tests/**", "**/test/**", "**/tests/**"]
    },
    "autoload-dev" : {
        "psr-4": {
            "Eccube\\Tests\\" : "tests/Eccube/Tests"
        }
    },
    "scripts": {
        "compile": [
            "php eccube_install.php pgsql none --skip-createdb -V",
            "sed -i -e \"s|${PWD}|/app|\" ${PWD}/app/config/eccube/path.yml"
        ]
    },
    "config": {
        "platform": {
            "php": "5.5.9"
        }
    }
}
