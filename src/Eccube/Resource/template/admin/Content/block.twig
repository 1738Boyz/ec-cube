{% extends 'default_frame.twig' %}

{% block title %}コンテンツ管理{% endblock %}
{% block sub_title %}ブロック管理{% endblock %}

{% block main %}

<form name="content_block_form" id="content_block_form" method="post" action="
{%- if block_id is not null %}{{ url('admin_content_block_edit', {id: block_id}) }}{% else %}{{ url('admin_content_block')}}{% endif -%}">

    {{ form_widget(form._token) }}
    {{ form_widget(form.id) }}
    {{ form_widget(form.DeviceType) }}
    <table>
        <tr>
            <th>{{ form_label(form.name) }}</th>
            <td>
                {{ form_widget(form.name) }}
                <div class="message">
                    <span class="attention">{{ form_errors(form.name) }}</span>
                </div>
            </td>
        </tr>
        <tr>
            <th>{{ form_label(form.file_name) }}</th>
            <td>
                {{ form_widget(form.file_name) }}
                <div class="attention">
                    <span class="attention">{{ form_errors(form.file_name) }}</span>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div>
                    {{ form_widget(form.bloc_html) }}
                    <input type="hidden" name="html_area_row" value="" /><br />
                    <a id="resize-btn" class="btn-normal" href="javascript:;" onclick="eccube.toggleRows('#resize-btn', '#tpl_data', 50, 13); return false;"><span>拡大</span></a>
                </div>
            </td>
        </tr>
    </table>
</form>


    <h2>編集可能ブロック</h2>
    <div class="btn addnew">
        <a class="btn-normal" href="{{ url('admin_content_block')}}"><span>ブロックを新規入力</span></a>
    </div>
    <table class="list">
        <col width="70%"/>
        <col width="15%"/>
        <col width="15%"/>
        <tr>
            <th>名称</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
        {% for Block in Blocks %}
            <tr>
                <td>
                    {{ Block.name }}
                </td>
                <td class="center">
                        <a href="{{ url('admin_content_block_edit', {id: Block.id}) }}">編集</a>
                </td>
                <td class="center">
                    {% if Block.deletable_flg == 1 %}
                        <a href="{{ url('admin_content_block_delete', {id: Block.id}) }}">削除</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}