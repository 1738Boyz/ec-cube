{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'layout'] %}

{% block title %}{{'admin.content.layout_list.46'|trans}}{% endblock %}
{% block sub_title %}{{'admin.content.layout_list.45'|trans}}{% endblock %}

{% block main %}
    <div class="c-outsideBlock">
        <div class="c-outsideBlock__contents">
            <div class="row">
                <div class="col text-center">
                    <div class="btn-group nav d-inline-flex" id="pills-tab" role="tablist"><a class="nav-link active btn btn-ec-tab py-2 pl-4 pr-4" id="pills-pc-tab" data-toggle="pill" href="#pills-pc" role="tab" aria-controls="pills-pc" aria-selected="true">PC</a><a class="nav-link btn btn-ec-tab py-2 pl-4 pr-4" id="pills-mobile-tab" data-toggle="pill" href="#pills-mobile" role="tab" aria-controls="pills-mobile" aria-selected="false">モバイル</a></div>
                </div>
            </div>
        </div>
    </div>
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-pc" role="tabpanel" aria-labelledby="pills-pc-tab">
                        {# TODO レイアウト追加画面(PC)に移動する #}
                        <div class="d-block mb-3">
                            <a class="btn btn-ec-regular" href="{{ url('admin_content_layout_new')}}">PC用レイアウトを新規追加</a>
                        </div>
                        <div class="card rounded border-0 mb-4">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-8">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span class="card-title">デフォルトのレイアウト</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                    </div>
                                    <div class="col-4 text-right"><a data-toggle="collapse" href="#defaultLayout-pc" aria-expanded="false" aria-controls="defaultLayout-pc"><i class="fa fa-angle-up fa-lg"></i></a></div>
                                </div>
                            </div>
                            <div class="collapse show ec-cardCollapse" id="defaultLayout-pc">
                                <div class="card-body">
                                    {# TODO デフォルトのレイアウトを選択して登録できるようにする #}
                                    <div class="row">
                                        <div class="col-3 pr-0">
                                            <form>
                                                <select class="form-control">
                                                    {% for Layout in Layouts %}
                                                        <option value="">{{ Layout.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </form>
                                        </div>
                                        <div class="col">
                                            <button class="btn btn-ec-regular" type="button">{{ 'common.label.save'|trans }}</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# layouts #}
                        {% for Layout in Layouts %}
                            {% if Layout.devicetype.id == constant('\\Eccube\\Entity\\Master\\DeviceType::DEVICE_TYPE_PC') %}
                                <div class="card rounded border-0 mb-4">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-8"><a class="card-title align-middle" href="/content/layout/detail">{{ Layout.name }}</a>
                                                <button class="btn btn-ec-regular" type="button" data-toggle="modal" data-target="#addPage">ページ追加</button>
                                                <button class="btn btn-ec-sub" type="button" data-toggle="modal" data-target="#layoutDelete">レイアウト削除</button>
                                            </div>
                                            <div class="col-4 text-right"><a data-toggle="collapse" href="#topPageLayout-pc" aria-expanded="false" aria-controls="topPageLayout-pc"><i class="fa fa-angle-up fa-lg"></i></a></div>
                                        </div>
                                    </div>

                                    {# Pages #}
                                    {% if Layout.pages|length > 0 %}
                                        {# TODO ページをドラッグ＆ドロップで移動できるようにする #}
                                        {% for Page in Layout.pages %}
                                            <div class="collapse show ec-cardCollapse" id="topPageLayout-pc">
                                                <div class="card-body p-0">
                                                    <div class="row justify-content-between p-3">
                                                        <div class="col-auto"><i class="fa fa-bars text-ec-gray mr-3"></i><span>{{ Page.name }}</span></div>
                                                        {# TODO ページを削除できるようにする #}
                                                        <div class="col-auto text-right"><a><i class="fa fa-close fa-lg text-secondary mr-1"></i></a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% else %}
                                        <div class="collapse show ec-cardCollapse" id="lpLayout-pc">
                                            <div class="card-body p-0">
                                                <div class="d-block p-3"><span class="text-muted">ページの登録がありません</span></div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="tab-pane fade" id="pills-mobile" role="tabpanel" aria-labelledby="pills-mobile-tab">
                        {# TODO レイアウト追加画面(スマホ)に移動する #}
                        <div class="d-block mb-3">
                            <a class="btn btn-ec-regular" href="{{ url('admin_content_layout_new')}}">モバイル用レイアウトを新規追加</a>
                        </div>
                        <div class="card rounded border-0 mb-4">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-8">
                                        <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span class="card-title">デフォルトのレイアウト</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                    </div>
                                    <div class="col-4 text-right"><a data-toggle="collapse" href="#defaultLayout-mobile" aria-expanded="false" aria-controls="defaultLayout-mobile"><i class="fa fa-angle-up fa-lg"></i></a></div>
                                </div>
                            </div>
                            <div class="collapse show ec-cardCollapse" id="defaultLayout-mobile">
                                <div class="card-body">
                                    {# TODO デフォルトのレイアウトを選択して登録できるようにする #}
                                    <div class="row">
                                        <div class="col-3 pr-0">
                                            <form>
                                                <select class="form-control">
                                                    {% for Layout in Layouts %}
                                                        <option value="">{{ Layout.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </form>
                                        </div>
                                        <div class="col">
                                            <button class="btn btn-ec-regular" type="button">登録</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {# layouts #}
                        {% for Layout in Layouts %}
                            {% if Layout.devicetype.id == constant('\\Eccube\\Entity\\Master\\DeviceType::DEVICE_TYPE_SP') %}
                                <div class="card rounded border-0 mb-4">
                                    <div class="card-header">
                                        <div class="row">
                                            <div class="col-8"><a class="card-title align-middle" href="/content/layout/detail">{{ Layout.name }}</a>
                                                <button class="btn btn-ec-regular" type="button" data-toggle="modal" data-target="#addPage">ページ追加</button>
                                                <button class="btn btn-ec-sub" type="button" data-toggle="modal" data-target="#layoutDelete">レイアウト削除</button>
                                            </div>
                                            <div class="col-4 text-right"><a data-toggle="collapse" href="#topPageLayout-mobile" aria-expanded="false" aria-controls="topPageLayout-mobile"><i class="fa fa-angle-up fa-lg"></i></a></div>
                                        </div>
                                    </div>

                                    {# Pages #}
                                    {% if Layout.pages|length > 0 %}
                                        {# TODO ページをドラッグ＆ドロップで移動できるようにする #}
                                        {% for Page in Layout.pages %}
                                            <div class="collapse show ec-cardCollapse" id="topPageLayout-mobile">
                                                <div class="card-body p-0">
                                                    <div class="row justify-content-between p-3">
                                                        <div class="col-auto"><i class="fa fa-bars text-ec-gray mr-3"></i><span>{{ Page.name }}</span></div>
                                                        {# TODO ページを削除できるようにする #}
                                                        <div class="col-auto text-right"><a><i class="fa fa-close fa-lg text-secondary mr-1"></i></a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% else %}
                                        <div class="collapse show ec-cardCollapse" id="lpLayout-mobile">
                                            <div class="card-body p-0">
                                                <div class="d-block p-3"><span class="text-muted">ページの登録がありません</span></div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="modal fade" id="addPage" tabindex="-1" role="dialog" aria-labelledby="addPage" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        {# TODO レイアウトにページを追加できるようにする #}
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">ページを追加</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            </div>
                            <div class="modal-body">
                                <p>このレイアウトに割り当てるページを選択してください。すでに他のレイアウトを割り当てられているページは設定が上書きされます</p>
                                <form>
                                    <select class="form-control">

                                        <option>// TODO ページの一覧表示</option>
                                        <option>...</option>
                                    </select>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-ec-sub w-25" type="button" data-dismiss="modal">キャンセル</button>
                                <button class="btn btn-ec-conversion w-25" type="button" data-dismiss="modal">ページを追加</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="layoutDelete" tabindex="-1" role="dialog" aria-labelledby="layoutDelete" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        {# TODO レイアウトを削除できるようにする #}
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">レイアウトを削除</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            </div>
                            <div class="modal-body">
                                <p>レイアウトを削除しますか？ この操作は取り消せません。</p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-ec-sub w-25" type="button" data-dismiss="modal">キャンセル</button>
                                <button class="btn btn-ec-delete" type="button" data-dismiss="modal">レイアウトを削除</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
