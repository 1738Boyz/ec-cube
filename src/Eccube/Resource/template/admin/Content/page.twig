{% extends 'default_frame.twig' %}

{% set menus = ['content', 'page'] %}

{% block title %}{{'admin.content.page.69'|trans}}{% endblock %}
{% block sub_title %}{{'admin.content.page.70'|trans}}{% endblock %}

{% block main %}
<div id="page_wrap" class="container-fluid">
    <div id="page_list" class="row">
        <div id="page_list_box" class="col-md-12">
            <div id="page_list__body" class="box">
                <div id="page_list_box__header" class="box-header">
                    <div class="box-title">
                        {{'admin.content.page.71'|trans}}
                    </div>
                </div>
                <div id="sortable_list_box" class="box-body no-padding no-border">
                    <div id="sortable_list_box__list" class="sortable_list">
                        <div class="tableish">
                            <div class="item_box tr" style="background-color: #F9F9F9;">
                                <div class="item_pattern td"><strong>{{'admin.content.page.72'|trans}}</strong></div>
                                <div class="item_pattern td"><strong>{{'admin.content.page.73'|trans}}</strong></div>
                                <div class="item_pattern td"></div>
                            </div>
                            {% for Page in Pages %}
                                <div id="sortable_list_box__item--{{ Page.id }}" class="item_box tr">
                                    <div id="sortable_list_box__name--{{ Page.id }}" class="item_pattern td">
                                        <a href="{{ url('admin_content_page_edit', {id : Page.id } ) }}">{{ Page.name }}</a>
                                    </div>
                                    <div id="sortable_list_box__layout--{{ Page.id }}" class="td">
                                        <ul class="">
                                        {% for Layout in Page.layouts %}
                                            <li>{{ Layout.device_type.name }}：{{ Layout.name }}</li>
                                        {% endfor %}
                                        </ul>
                                    </div>
                                    <div id="sortable_list_box__menu_box--{{ Page.id }}" class="icon_edit td">
                                        <div id="sortable_list_box__menu_box_toggle--{{ Page.id }}" class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown"><svg class="cb cb-ellipsis-h"> <use xlink:href="#cb-ellipsis-h" /></svg></a>
                                            <ul id="sortable_list_box__menu--{{ Page.id }}" class="dropdown-menu dropdown-menu-right">
                                                <li>
                                                    {% if Page.filename|length >= 1 %}
                                                        <a href="{{ url('admin_content_page_edit', {id : Page.id } ) }}">{{'admin.content.page.75'|trans}}</a>
                                                    {% else %}
                                                        <a>{{'admin.content.page.76'|trans}}</a>
                                                    {% endif %}
                                                </li>
                                                <li>
                                                    {% if Page.edit_type == constant('Eccube\\Entity\\Page::EDIT_TYPE_USER') %}
                                                        <a href="{{ url('admin_content_page_delete', { 'id': Page.id}) }}" {{ csrf_token_for_anchor() }} data-method="delete" data-message="{{'admin.content.page.77'|trans}}">{{'common.label.delete'|trans}}</a>
                                                    {% else %}
                                                        <a>{{'admin.content.page.78'|trans}}</a>
                                                    {% endif %}
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div><!-- /.item_box -->
                            {% endfor %}

                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
            <!-- ▲ データがある時 ▲ -->
        </div><!-- /.col -->

        <div id="page_list__footer" class="row btn_area2">
            <div id="page_list__insert_button" class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center">
                <a class="btn btn-primary btn-block btn-lg" href="{{ url('admin_content_page_new')}}">{{'admin.content.page.79'|trans}}</a>
            </div>
        </div>

    </div>
</div>
{% endblock %}
