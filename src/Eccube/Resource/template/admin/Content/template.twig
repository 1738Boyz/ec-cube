{% extends 'default_frame.twig' %}

{% block title %}コンテンツ管理{% endblock %}
{% block sub_title %}テンプレート管理{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block javascript %}]
<script>
    {#$(function() {#}
        {#var data = '{{ form_widget(form.move.vars.prototype) }}';#}
        {#$(".move").each(function(){#}
            {#var check = data.replace(/__name__/g, $(this).attr("data-template-id"));#}
            {#$(check).appendTo($(this));#}
        {#});#}
    {#});#}
</script>
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <form name="form1" id="form1" method="post" action="{{ url('admin_content_template') }}">
            {{ form_widget(form._token) }}
            {{ form_widget(form.selected) }}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">テンプレート一覧</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                        <div class="table_list">
                            <div class="table-responsive with-border">
                                <table class="table table-striped">
                                    <thead>
                                    <tr>
                                        <th>選択</th>
                                        <th>名前</th>
                                        <th>保存先</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for Template in Templates %}
                                    <tr>
                                        <td>
                                            <input type="radio" name="template" value="{{ Template.id }}" {% if app.config.template_code == Template.code %}checked="checked"{% endif %}/>
                                        </td>
                                        <td>{{ Template.name }}</td>
                                        <td>
                                            <ul>
                                                <li>app/template/{{Template.code }}</li>
                                                <li>html/template/{{ Template.code }}</li>
                                            </ul>
                                        </td>
                                        <td class="icon_edit">
                                            <div class="dropdown">
                                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><svg class="cb cb-ellipsis-h"> <use xlink:href="#cb-ellipsis-h" /></svg></a>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li><a href="{{ url('admin_content_template_download', { 'id' : Template.id }) }}" >ダウンロード</a></li>
                                                    {% if Template.default_template %}
                                                        <li>
                                                            <a>削除</a>
                                                        </li>
                                                    {% else %}
                                                        <li>
                                                            <a href="?" onclick="eccube.changeAction('{{ url('admin_content_template_delete', { id : Template.id}) }}'); document.form1.submit(); return false;">削除</a>
                                                        </li>
                                                    {% endif %}
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                </div>
            </div><!-- /.box -->
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                    <button type="button"
                            class="btn btn-primary btn-block btn-lg"
                            onclick="$('#form_selected').val($('input[name=template]:checked').val());document.form1.submit()">登録</button>
                </div>
            </div>
            </form>
        </div>
    </div>

{% endblock %}