{% extends 'main_frame.twig' %}

{% block title %}会員管理{% endblock %}
{% block sub_title %}会員登録・編集{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}

<div class="row" id="aside_wrap">
    <div class="col-md-9">
        <div class="box accordion">
            <div class="box-header toggle active">
                <h3 class="box-title">会員情報<svg class="cb cb-angle-down icon_down"> <use xlink:href="#cb-angle-down" /></svg></h3>
            </div><!-- /.box-header -->
            <div class="box-body accpanel" style="display: block;">
                <form role="form" class="form-horizontal" name="customer_form" id="customer_form" method="post" action="">
                    {{ form_widget(form._token) }}
                    {{ form_widget(form.name) }}
                    {{ form_widget(form.kana) }}
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="name1">お名前 <span class="text-danger">*</span></label>
                        <div class="col-sm-9 col-lg-10 input_name form-inline">

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="name2">お名前(カナ)</label>
                        <div class="col-sm-9 col-lg-10 input_name form-inline">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="address1">住所</label>
                        {{ form_widget(form.address) }}
                        <!--
                        <div class="col-sm-9 col-lg-10 input_zip form-inline">〒<input class="form-control" type="text">-<input class="form-control" type="text"><button class="btn btn-default btn-sm" type="submit">自動入力</button>
                        </div>
                        -->
                    </div>
                    <!--
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10 form-inline">
                            <select class="form-control">
                                <option selected="selected">都道府県を選択</option>
                                <option>option 1</option>
                                <option>option 2</option>
                                <option>option 3</option>
                                <option>option 4</option>
                                <option>option 5</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                            <input class="form-control" type="text" id="address1" placeholder="市区町村名（例：千代田区神田神保町）">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                            <input class="form-control" type="text" placeholder="番地・ビル名（例：1-3-5）">
                        </div>
                    </div>
                    -->
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="email">メールアドレス</label>
                        {{ form_widget(form.email) }}
                        <!--
                        <div class="col-sm-9 col-lg-10"><input class="form-control" type="email" id="email"></div>
                        -->
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="tel">電話番号</label>
                        <div class="col-sm-9 col-lg-10 input_tel form-inline"><input class="form-control" type="tel" id="tel">-<input class="form-control" type="tel">-<input class="form-control" type="tel"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="fax">FAX番号</label>
                        <div class="col-sm-9 col-lg-10 input_tel form-inline"><input class="form-control" type="tel" id="fax">-<input class="form-control" type="tel">-<input class="form-control" type="tel"></div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="password">パスワード</label>
                        <div class="col-sm-9 col-lg-10">
                            <input class="form-control" type="password" placeholder="" id="password" required>
                            <span class="small">半角英数字4～50文字（記号不可）</span>
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <label class="col-sm-3 col-lg-2" for="other">パスワードのヒント</label>
                        <div class="col-sm-9 col-lg-10">
                            質問 <select class="form-control" required>
                                <option selected="selected">質問を選択してください</option>
                                <option>option 1</option>
                                <option>option 2</option>
                                <option>option 3</option>
                                <option>option 4</option>
                                <option>option 5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-sm-offset-3 col-sm-9 col-lg-offset-2 col-lg-10">
                            答え <input class="form-control" type="text" placeholder="質問に対する回答を入力してください" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="other">メールマガジン</label>
                        <div class="col-sm-9 col-lg-10">
                            <div class="radio"><label class="radio"><input type="radio" name="mailmag" value="1">受け取る</label>
                                <label class="radio"><input type="radio" name="mailmag" value="2" checked="checked">仮会員</label></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="gender">性別</label>
                        <div class="col-sm-9 col-lg-10">
                            <div class="radio"><label class="radio-inline"><input type="radio" name="gender" value="1">男性</label>
                                <label class="radio-inline"><input type="radio" name="gender" value="2" checked="checked">女性</label></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="job">職業</label>
                        <div class="col-sm-9 col-lg-10">
                            <select class="form-control" required>
                                <option selected="selected">質問を選択してください</option>
                                <option>option 1</option>
                                <option>option 2</option>
                                <option>option 3</option>
                                <option>option 4</option>
                                <option>option 5</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 col-lg-2" for="birth">生年月日</label>
                        <div class="col-sm-9 col-lg-10">
                            <div class="form-inline">
                                <select class="form-control">
                                    <option selected="selected">年</option>
                                    <option>option 1</option>
                                    <option>option 2</option>
                                    <option>option 3</option>
                                    <option>option 4</option>
                                    <option>option 5</option>
                                </select>

                                <select class="form-control">
                                    <option selected="selected">月</option>
                                    <option>option 1</option>
                                    <option>option 2</option>
                                    <option>option 3</option>
                                    <option>option 4</option>
                                    <option>option 5</option>
                                </select>

                                <select class="form-control">
                                    <option selected="selected">日</option>
                                    <option>option 1</option>
                                    <option>option 2</option>
                                    <option>option 3</option>
                                    <option>option 4</option>
                                    <option>option 5</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>

            </div><!-- /.box-body -->
        </div><!-- /.box -->

        <div class="box accordion">
            <div class="box-header toggle">
                <h3 class="box-title">購入履歴<svg class="cb cb-angle-down icon_down"> <use xlink:href="#cb-angle-down" /></svg></h3>
            </div><!-- /.box-header -->
            <div class="box-body accpanel">
                <div class="data-empty"><svg class="cb cb-inbox"> <use xlink:href="#cb-inbox" /></svg><p>データはありません</p>
                </div>
            </div>
        </div>
    </div><!-- /.col -->

    <div class="col-md-3" id="aside_column">
        <div class="col_inner">
            <div class="box no-header">
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="form-group">
                                <div class="radio"><label class="radio-inline"><input type="radio" name="status" value="1">会員</label>
                                    <label class="radio-inline"><input type="radio" name="status" value="2" checked="checked">仮会員</label></div>
                            </div>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                            <button class="btn btn-primary btn-block btn-lg">会員情報を登録</button>
                        </div>
                    </div>
                </div><!-- /.box-body -->
            </div><!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">ショップ用メモ欄</h3>
                </div><!-- /.box-header -->
                <div class="box-body"><textarea class="form-control" rows="3"></textarea></div>
            </div><!-- /.box -->

        </div>
    </div><!-- /.col -->
</div>
{% endblock %}