{% extends 'default_frame.twig' %}

{% set menus = ['product', 'product_csv_import'] %}

{% block title %}商品管理{% endblock %}
{% block sub_title %}商品CSVアップロード{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
<div class="row">
    <div class="col-md-12">
        <form class="form-inline" method="post" action="{{ url('admin_product_csv_import') }}" {{ form_enctype(form) }}>
            {{ form_widget(form._token) }}
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">商品登録CSV</h3>
                    <div class="form-group">
                        <label class="col-sm-5 control-label">CSVファイル選択</label>
                        <div class="col-sm-7">
                            {{ form_widget(form.import_file, {'attr': {'accept': 'text/csv,text/tsv'}}) }}
                            {{ form_errors(form.import_file) }}
                        </div>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body text-center">
                    <button type="submit" class="btn btn-primary btn-sm" name="mode" value="import">CSVファイルのアップロード</button>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </form>
    </div><!-- /.col -->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <a href="{{ url('admin_product_csv_template') }}" class="btn btn-default pull-right btn-xs">雛形ファイルダウンロード</a>
                <h3 class="box-title">商品登録CSVファイルフォーマット</h3>
            </div><!-- /.box-header -->
            <div class="box-body no-padding">
                <div class="table_list">
                    <div class="table-responsive with-border table-menu">
                        <table class="table table-striped">
                            <thead>
                                <tr class="text-nowrap">
                                    {% for header in headers|keys %}
                                        <th>{{ header }}</th>
                                    {% endfor %}
                                </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>
                                    商品ID
                                </td>
                                <td>
                                    商品ID
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
</div>

{% endblock %}
