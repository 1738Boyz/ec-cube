{% block javascript %}
$(function(){

    // タグの削除
    $(".alert-dismissible").on('click', function(){
        $(this).remove();
    });

    // タグの追加
    var proto_tag = '' +
    '<li class="alert-dismissible">' +
        '<button type="button" class="close" aria-label="Close" data-dismiss="alert">' +
            '<svg aria-hidden="true" class="cb cb-close"> <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#cb-close"></use></svg>' +
        '</button>' +
        '__value__' +
        '{{ form_widget(form.tags.vars.prototype) }}' +
    '</li>';

    var count = $(".tag_list").children().length;
    $("#add_tag").on('click', function(){
        var $tag = $("#{{ form.tag.vars.id }}");

        var new_tag = proto_tag
            .replace(/__name__/g, count)
            .replace(/__value__/g, $tag.val());

        var $new_tag = $(new_tag);
        $new_tag.find('input').val($tag.val());

        $(".tag_list").append($new_tag);

        // テキストボックスをクリア
        $tag.val('');
        count ++;

        return false;
    });


    $('.photo_files').on('drop', function(e){
        e.preventDefault();

        var files = e.originalEvent.dataTransfer.files;

        uploadFiles(files);
    })
    .on('dragenter', function(){
        return false;
    })
    .on('dragover', function(){
        return false;
    });

    $('#btn').on('click', function() {
        $('input[type="file"]').click();
    });

    $('input[type="file"]').on('change', function(){
        // ファイル情報を取得
        var files = this.files;

        uploadFiles(files);
    });

});

function uploadFiles(files) {
    var fd = new FormData();

    for (var i = 0; i < files.length; i++) {
        fd.append("files[]", files[i]);
    }

    $.ajax({
        url: 'アップロード処理をするファイルのパス',
        type: 'POST',
        data: fd,
        processData: false,
        contentType: false,
        success: function(data) {
            console.log('ファイルがアップロードされました。');
        }
    });
}
