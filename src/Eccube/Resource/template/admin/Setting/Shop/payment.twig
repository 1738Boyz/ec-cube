{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['setting', 'shop', 'shop_payment'] %}

{% block title %}{{'admin.setting.shop.payment.596'|trans}}{% endblock %}
{% block sub_title %}{{'admin.setting.shop.payment.595'|trans}}{% endblock %}

{% block main %}

    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-body p-0">
                        <div class="row my-3 ml-1">
                            <div class="col-3">
                                <form target="{{ url('admin_setting_shop_payment_new') }}">
                                    <input class="form-control" type="text"> {#TODO: User input new name and submit to create#}
                                </form>
                            </div>
                            <div class="col-auto pl-0">
                                <button class="btn btn-ec-regular" type="submit">{{'admin.setting.shop.payment.610'|trans}}</button>
                            </div>
                        </div>
                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item">
                                <div class="row justify-content-around">
                                    <div class="col-auto"><strong>&nbsp;</strong></div>
                                    <div class="col-1"><strong>{{'admin.setting.shop.payment.597'|trans}}</strong></div>
                                    <div class="col-1"><strong>{{'admin.setting.shop.payment.599'|trans}}</strong></div>
                                    <div class="col"><strong>{{'admin.setting.shop.payment.600'|trans}}</strong></div>
                                </div>
                            </li>
                            {% for Payment in Payments %}
                            <li class="list-group-item">
                                <div class="row justify-content-around">
                                    <div class="col-auto d-flex align-items-center"><i class="fa fa-bars text-ec-gray"></i></div>
                                    <div class="col-1 d-flex align-items-center"><a href="{{ url('admin_setting_shop_payment_edit', { id: Payment.id}) }}">{{ Payment.methodForAdmin }}</a></div>
                                    <div class="col-1 d-flex align-items-center"><span>{{ Payment.charge }}</span></div>
                                    <div class="col d-flex align-items-center">
                                        <span>
                                            {% if Payment.rule_min > 0 %}
                                                {{ Payment.rule_min }}
                                            {% else %}
                                                0
                                            {% endif %}
                                            {{eccube_config.currency}}

                                            {% if Payment.rule_max > 0 %}
                                                ～{{eccube_config.currency}}{{ Payment.rule_max }}
                                            {% elseif Payment.rule_max is null %}
                                                ～{{'admin.setting.shop.payment.603'|trans}}
                                            {% endif %}
                                        </span>
                                    </div>
                                    <div class="col-3 text-right">
                                        <a class="btn btn-ec-actionIcon mr-3" href="{{ url('admin_setting_shop_payment_up', {id: Payment.id}) }}" {{ csrf_token_for_anchor() }}  data-method="put" data-confirm="false" data-toggle="tooltip" data-placement="top" title="{{'admin.setting.shop.payment.608'|trans}}">
                                            <i class="fa fa-arrow-up fa-lg text-secondary"></i>
                                        </a>
                                        <a class="btn btn-ec-actionIcon mr-3" href="{{ url('admin_setting_shop_payment_down', {id: Payment.id}) }}" {{ csrf_token_for_anchor() }}  data-method="put" data-confirm="false" data-toggle="tooltip" data-placement="top" title="{{'admin.setting.shop.payment.609'|trans}}">
                                            <i class="fa fa-arrow-down fa-lg text-secondary"></i>
                                        </a>
                                        <a class="btn btn-ec-actionIcon mr-3" href="{{ url('admin_setting_shop_payment_delete', { id: Payment.id}) }}" {{ csrf_token_for_anchor() }} data-method="delete" data-toggle="tooltip" data-placement="top" title="{{'admin.setting.shop.payment.607'|trans}}">
                                            <i class="fa fa-close fa-lg text-secondary"></i>
                                        </a>
                                    </div>
                                </div>
                            </li>
                            {% endfor %}

                        </ul>
                    </div>
                </div>
                <p>{{'admin.setting.shop.payment.notice'|trans}}</p>
            </div>
        </div>
    </div>
{% endblock %}
