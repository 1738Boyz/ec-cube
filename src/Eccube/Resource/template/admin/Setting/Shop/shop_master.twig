{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['setting', 'shop', 'shop_index'] %}

{% block title %}{{ 'admin_setting_shop_shop_master.label.sub_title'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin_setting_shop_shop_master.label.title'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-datetimepicker.min.css', 'admin') }}">
{% endblock stylesheet %}

{% block main %}
    <form name="form1" role="form" class="form-horizontal h-adr" id="point_form" method="post" action="">
        <span class="p-country-name" style="display:none;">Japan</span>

        {{ form_widget(form._token) }}

        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>基本情報</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>会社名</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.company_name) }}
                                    {{ form_errors(form.company_name) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>会社名（フリガナ）</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.company_kana) }}
                                    {{ form_errors(form.company_kana) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>店名</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.shop_name) }}
                                    {{ form_errors(form.shop_name) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>店名（フリガナ）</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.shop_kana) }}
                                    {{ form_errors(form.shop_kana) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>店名（英語表記）</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.shop_name_eng) }}
                                    {{ form_errors(form.shop_name_eng) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>住所</span><span class="badge badge-primary ml-1">必須</span></div>
                                <div class="col mb-2">
                                    <div class="mb-2">
                                        <div class="row justify-content-start">
                                            <div class="col-auto text-center pr-0"><span class="align-middle">〒</span></div>
                                            <div class="col-2">
                                                {{ form_widget(form.zip.zip01) }}
                                            </div>
                                            <div class="col-auto text-center p-0"><span class="align-middle">-</span></div>
                                            <div class="col-2">
                                                {{ form_widget(form.zip.zip02) }}
                                            </div>
                                            {{ form_errors(form.zip.zip01) }}
                                            {{ form_errors(form.zip.zip02) }}
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        <div class="row justify-content-start">
                                            <div class="col-3">
                                                {{ form_widget(form.address.pref) }}
                                                {{ form_errors(form.address.pref) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-2">
                                        {{ form_widget(form.address.addr01, { attr : { placeholder : 'common.placeholder.address01'}} ) }}
                                        {{ form_errors(form.address.addr01) }}
                                    </div>
                                    <div class="mb-2">
                                        {{ form_widget(form.address.addr02, { attr : { placeholder : 'common.placeholder.address02' }}) }}
                                        {{ form_errors(form.address.addr02) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3"><span>電話番号</span><span class="badge badge-primary ml-1">必須</span></div>
                                <div class="col">
                                    <div class="row justify-content-start">
                                        <div class="col-2">
                                            {{ form_widget(form.tel.tel01) }}
                                        </div>
                                        <div class="col-auto text-center p-0"><span class="align-middle">-</span></div>
                                        <div class="col-2">
                                            {{ form_widget(form.tel.tel02) }}
                                        </div>
                                        <div class="col-auto text-center p-0"><span class="align-middle">-</span></div>
                                        <div class="col-2">
                                            {{ form_widget(form.tel.tel03) }}
                                        </div>
                                        {{ form_errors(form.tel.tel01) }}
                                        {{ form_errors(form.tel.tel02) }}
                                        {{ form_errors(form.tel.tel03) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3"><span>FAX番号</span></div>
                                <div class="col">
                                    <div class="row justify-content-start">
                                        <div class="col-2">
                                            {{ form_widget(form.fax.fax01) }}
                                        </div>
                                        <div class="col-auto text-center p-0"><span class="align-middle">-</span></div>
                                        <div class="col-2">
                                            {{ form_widget(form.fax.fax02) }}
                                        </div>
                                        <div class="col-auto text-center p-0"><span class="align-middle">-</span></div>
                                        <div class="col-2">
                                            {{ form_widget(form.fax.fax03) }}
                                        </div>
                                        {{ form_errors(form.fax.fax01) }}
                                        {{ form_errors(form.fax.fax02) }}
                                        {{ form_errors(form.fax.fax03) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3"><span>店舗営業時間</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.business_hour) }}
                                    {{ form_errors(form.business_hour) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3"><span>送信元メールアドレス(From)</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.email01) }}
                                    {{ form_errors(form.email01) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3"><span>問い合わせ受付メールアドレス(From, ReplyTo)</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.email02) }}
                                    {{ form_errors(form.email02) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3"><span>返信受付メールアドレス(ReplyTo)</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.email03) }}
                                    {{ form_errors(form.email03) }}
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-3"><span>送信エラー受付メールアドレス(ReturnPath)</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.email04) }}
                                    {{ form_errors(form.email04) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>取り扱い商品説明文</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.good_traded) }}
                                    {{ form_errors(form.good_traded) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>店舗からのメッセージ</span></div>
                                <div class="col mb-2">
                                    {{ form_widget(form.message) }}
                                    {{ form_errors(form.message) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>送料設定</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span>送料無料条件（金額）</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                </div>
                                <div class="col mb-2">
                                    <div class="input-group col-4 pl-0">
                                        <div class="input-group-prepend">
                                            {# TODO フォームの左側の角が丸くなっている #}
                                            <div class="input-group-text">￥</div>
                                            {{ form_widget(form.delivery_free_amount, {'attr': {'class': 'notmoney'}}) }}
                                            {{ form_errors(form.delivery_free_amount) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span>送料無料条件（数量）</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                </div>
                                <div class="col mb-2">
                                    <div class="input-group col-4 pl-0">
                                        {{ form_widget(form.delivery_free_quantity) }}
                                        {{ form_errors(form.delivery_free_quantity) }}
                                        <div class="input-group-append">
                                            <div class="input-group-text">個</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>商品ごとの送料設定</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_product_delivery_fee) }}
                                            {{ form_errors(form.option_product_delivery_fee) }}
                                            <label for="switch_productCost"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">無効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span>複数配送</span></div>
                                </div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_multiple_shipping) }}
                                            {{ form_errors(form.option_multiple_shipping) }}
                                            <label for="switch_multiDelivery"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">無効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>会員設定</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>仮会員機能</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_customer_activate) }}
                                            {{ form_errors(form.option_customer_activate) }}
                                            <label for="switch_provisionalUser"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">有効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>マイページに注文状況を表示</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_mypage_order_status_display) }}
                                            {{ form_errors(form.option_mypage_order_status_display) }}
                                            <label for="switch_mypageOrder"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">有効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>お気に入り商品機能</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_favorite_product) }}
                                            {{ form_errors(form.option_favorite_product) }}
                                            <label for="switch_favoriteProduct"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">有効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3"><span>自動ログイン機能</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_remember_me) }}
                                            {{ form_errors(form.option_remember_me) }}
                                            <label for="switch_autoLogin"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">無効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>商品設定</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>在庫切れ商品の表示</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_nostock_hidden) }}
                                            {{ form_errors(form.option_nostock_hidden) }}
                                            <label for="switch_productDisplay"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">非表示</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>個別税率設定</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span>商品別税率機能</span></div>
                                </div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO 個別税率設定を税率設定画面からショップマスターに移植する #}
                                            <input type="checkbox" id="switch_autoLogin">
                                            <label for="switch_autoLogin"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">無効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>ポイント設定</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3"><span>{{ 'common.label.option_point'|trans }}</span></div>
                                <div class="col mb-2">
                                    <div class="c-toggleSwitch">
                                        <div class="c-toggleSwitch__btn">
                                            {# TODO チェックボックスに変更する #}
                                            {{ form_widget(form.option_point) }}
                                            {{ form_errors(form.option_point) }}
                                            <label for="switch_productDisplay"></label>
                                        </div>
                                        <div class="c-toggleSwitch__label"><span class="text-dark">有効</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span>{{ 'common.label.basic_point_rate'|trans }}</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                </div>
                                <div class="col mb-2">
                                    <div class="input-group col-4 pl-0">
                                        <div class="input-group-prepend">
                                            {{ form_widget(form.basic_point_rate) }}
                                            {{ form_errors(form.basic_point_rate) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top" title="Tooltip"><span>{{ 'common.label.point_conversion_rate'|trans }}</span><i class="fa fa-question-circle fa-lg ml-1"></i></div>
                                </div>
                                <div class="col mb-2">
                                    <div class="input-group col-4 pl-0">
                                        <div class="input-group-prepend">
                                            {{ form_widget(form.point_conversion_rate) }}
                                            {{ form_errors(form.point_conversion_rate) }}
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">登録</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}