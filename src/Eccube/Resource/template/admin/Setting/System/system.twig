{% extends '@admin/default_frame.twig' %}

{% set menus = ['setting', 'system', 'system_index'] %}

{% block title %}{{'admin.setting.system.system.713'|trans}}{% endblock %}
{% block sub_title %}{{'admin.setting.system.system.714'|trans}}{% endblock %}

{% block main %}
    <div id="server_wrap" class="row">
        <div id="server_info_box" class="col-md-12">
            <div id="server_info_box__body" class="box">
                <div id="server_info_box__header" class="box-header">
                    <h3 class="box-title">{{'admin.setting.system.system.715'|trans}}</h3>
                </div><!-- /.box-header -->
                <div id="server_info_box__body_inner" class="box-body">
                    <dl class="dl-horizontal">
                       {% for key, item in info %}
                            <dt id="server_info_box__title--{{ loop.index }}">
                               {{item.title}}
                            </dt>
                            <dd id="server_info_box__value--{{ loop.index }}">
                               {{item.value}}
                            </dd>
                        {% endfor %}
                    </dl>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
    <div id="php_wrap" class="row">
        <div id="php_info_box" class="col-md-12">
            <div id="php_info_box__body" class="box">
                <div id="php_info_box__header" class="box-header">
                    <h3 class="box-title">{{'admin.setting.system.system.716'|trans}}</h3>
                </div><!-- /.box-header -->
                <div id="php_info_box__frame" class="box-body no-padding">
                    <iframe name="php_info" src="{{ url('admin_setting_system_system_phpinfo') }}" height="500" frameborder="0" style="width: 100%;"></iframe>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>

    </div>
{% endblock %}