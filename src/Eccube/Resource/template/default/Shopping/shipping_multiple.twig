{% extends 'default_frame.twig' %}

{% block javascript %}
<script>
$(function(){

    $('.delivery').on('change', function() {
                $('#shopping-form').attr('action', '{{ url("shopping_delivery") }}').submit();
    });

    $('.payment').on('change', function() {
                $('#shopping-form').attr('action', '{{ url("shopping_payment") }}').submit();
    });

    $('.add').click(function() {
        alert("hoge");

    });

});
</script>
{% endblock javascript %}

{% block main %}
    <h1 class="page-heading">お届け先の複数指定</h1>
    <div class="container-fluid">
        <form id="shipping-multiple-form" method="post" action="{{ url('shopping_shipping_multiple') }}">
            {{ form_widget(form._token) }}
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <p class="message">各商品のお届け先を選択してください。(※数量の合計は、カゴの中の数量と合わせてください。)</p>
                    <p><a href="{{ url('cart') }}" class="btn btn-default btn-sm">新規お届け先を追加する</a></p>

                    <div class="cart_item table">
                        <div class="tbody">
                            {% for shippings in Order.shippings %}
                                {% set idx1 = loop.index0 %}
                                {% for shipmentItem in shippings.shipmentItems %}
                                    {% set idx2 = loop.index0 %}
                                    {% set idx = idx1 + idx2 %}
                                <div class="item_box tr">
                                    <div class="td table">
                                        <div class="item_photo"><img src="{{ app.config.image_save_urlpath }}/{{ shipmentItem.product.MainListImage|no_image_product }}" alt="{{ shipmentItem.productName }}" /></div>
                                        <dl class="item_detail">
                                            <dt class="item_name text-default">{{ shipmentItem.productName }}</dt>
                                            <dd class="item_pattern small">
                                                {% if shipmentItem.productClass.classCategory1 %}
                                                    {{ shipmentItem.productClass.classCategory1.className }}：{{ shipmentItem.productClass.classCategory1 }}
                                                {% endif %}
                                                {% if shipmentItem.productClass.classCategory2 %}
                                                    <br>{{ shipmentItem.productClass.classCategory2.className }}：{{ shipmentItem.productClass.classCategory2 }}
                                                {% endif %}
                                            </dd>
                                            <dd>{{ shipmentItem.priceIncTax|price }} ×{{ shipmentItem.quantity }}</dd>
                                            <dd>小計：{{ shipmentItem.totalPrice|price }}</dd>
                                            <dd>数量：{{ shipmentItem.quantity }}</dd>
                                        </dl>
                                    </div>
                                </div><!--/item_box-->
                               <div class="form-inline form-group">
                                    <label>配送方法</label>
                                    {{ form_widget(form.shipping_multiple[idx].delivery, {'attr': {'class': 'delivery'}}) }}
                                </div>
                                <div class="form-inline form-group">
                                <label>数量</label>
                                    {{ form_widget(form.shipping_multiple[idx].quantity, {'attr': {'class': 'quantity'}}) }}
                                </div>
                                <p><button type="button" class="btn btn-default btn-sm add">お届け先追加</button></p>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div><!--/cart_item-->

                    <div class="row no-padding">
                        <div class="btn_group col-sm-offset-4 col-sm-4">
                            <p><button type="submit" class="btn btn-primary btn-block">選択したお届け先に送る</button></p>
                            <p><a href="{{ url('shopping') }}" class="btn btn-info btn-block">戻る</a></p>
                        </div>
                    </div>

                </div>



                {#
            <table summary="商品情報">
                {% for line in form.shipping_multi %}
                    <tr>
                        <td class="alignC">
                        </td>
                        <td class="alignC">
                            {{ form_widget(line.quantity) }}
                            {{ form_errors(line.quantity) }}
                        </td>
                        <td class="alignC">
                            {{ form_widget(line.other_deliv) }}
                            {{ form_errors(line.other_deliv) }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
            #}


            </div><!-- /.row -->
        </form>
    </div>

{% endblock %}