<!DOCTYPE html>
<html>
<head>
    <meta charset="{{ app.config.char_code }}">
    <title>{{ BaseInfo.shop_name }}{% if subtitle is defined and subtitle is not empty %} / {{ subtitle }}{% elseif title is defined and title is not empty %} / {{ title }}{% endif %}</title>
    {% if PageLayout.author is not empty %}
        <meta name="author" content="{{ PageLayout.author }}">
    {% endif %}
    {% if PageLayout.description is not empty %}
        <meta name="description" content="{{ PageLayout.description }}">
    {% endif %}
    {% if PageLayout.keyword is not empty %}
        <meta name="keywords" content="{{ PageLayout.keyword }}">
    {% endif %}
    {% if PageLayout.meta_robots is not empty %}
        <meta name="robots" content="{{ PageLayout.meta_robots }}">
    {% endif %}
    <link rel="shortcut icon" href="{{ app.config.root }}img/common/favicon.ico">
    <link rel="icon" type="image/vnd.microsoft.icon" href="{{ app.config.tpl }}img/common/favicon.ico">
    <link rel="stylesheet" href="{{ app.config.root }}js/jquery.colorbox/colorbox.css" type="text/css" media="all">
    <link rel="stylesheet" href="{{ app.config.tpl }}css/import.css" type="text/css" media="all">
    {% if app.request.attributes.get('_route') == 'product_detail' %}
        <link rel="stylesheet" href="{{ app.config.root }}js/jquery.ui/theme/jquery.ui.core.css" type="text/css" media="all">
        <link rel="stylesheet" href="{{ app.config.root }}js/jquery.ui/theme/jquery.ui.tooltip.css" type="text/css" media="all">
        <link rel="stylesheet" href="{{ app.config.root }}js/jquery.ui/theme/jquery.ui.theme.css" type="text/css" media="all">
    {% endif %}
    <link rel="alternate" type="application/rss+xml" title="RSS" href="{{ path('rss') }}">
    <!--[if lt IE 9]>
    <script src="{{ app.config.root }}js/jquery-1.11.1.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
    <script src="{{ app.config.root }}js/jquery-2.1.1.min.js"></script>
    <!--<![endif]-->
    <script type="text/javascript" src="{{ app.config.root }}js/eccube.js"></script>
    {#
    <!-- #2342 次期メジャーバージョン(2.14)にてeccube.legacy.jsは削除予定.モジュール、プラグインの互換性を考慮して2.13では残します. -->
    <script type="text/javascript" src="{{ app.config.root }}js/eccube.legacy.js"></script>
    #}
    <script type="text/javascript" src="{{ app.config.root }}js/jquery.colorbox/jquery.colorbox-min.js"></script>
    {% if app.request.attributes.get('_route') == 'help_about' %}
        {% if app.request.isSecure %}
            <script type="text/javascript" src="https://maps-api-ssl.google.com/maps/api/js?sensor=false"></script>
       {% else %}
            <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
        {% endif %}
    {% endif %}
    <script type="text/javascript">
        {{ block('javascript') }}
        $(function(){
            {{ block('onload') }}
        });
    </script>

    {# ▼Head COLUMN#}
    {% if PageLayout.HeadNavi %}
        {# ▼上ナビ #}
        {{ include('block.twig', {'Blocs': PageLayout.HeadNavi}) }}
        {# ▲上ナビ #}
    {% endif %}
    {# ▲Head COLUMN#}
</head>
<body{% if page_class_name is defined and page_class_name is not empty %} class="{{ page_class_name }}"{% endif %}>
    <div class="frame_outer">
        <a name="top" id="top"></a>

        {# ▼HeaderHeaderTop COLUMN#}
            {% if PageLayout.HeaderTopNavi %}
                <div id="headertopcolumn">
                    {# ▼上ナビ #}
                    {{ include('block.twig', {'Blocs': PageLayout.HeaderTopNavi}) }}
                    {# ▲上ナビ #}
                </div>
            {% endif %}
        {# ▲HeaderHeaderTop COLUMN#}

        {# ▼HEADER #}
            <div id="headertopcolumn">
                {# ▼上ナビ #}
                <div id="header_wrap">
                    <div id="header" class="clearfix">
                        <div id="logo_area">
                            <p id="site_description">EC-CUBE発!世界中を旅して見つけた立方体グルメを立方隊長が直送！</p>
                            <a href="{{ app.config.root }}"><img src="{{ app.config.tpl }}img/common/logo.gif" alt=""></a>
                        </div>
                        <div id="header_utility">
                            <div id="headerInternalColumn">
                                {# ▼HeaderInternal COLUMN#}
                                {% if PageLayout.HeaderInternalNavi %}
                                    {# ▼上ナビ #}
                                    {{ include('block.twig', {'Blocs': PageLayout.HeaderInternalNavi}) }}
                                    {# ▲上ナビ #}
                                {% endif %}
                                {# ▲HeaderInternal COLUMN#}
                            </div>
                            <div id="header_navi">
                                <ul>
                                    <li class="mypage">
                                        <a href="{{ path('mypage') }}"><img class="hover_change_image" src="{{ app.config.tpl }}img/common/btn_header_mypage.jpg" alt="MYページ"></a>
                                    </li>
                                    <li class="entry">
                                        <a href="{{ path('entry') }}"><img class="hover_change_image" src="{{ app.config.tpl }}img/common/btn_header_entry.jpg" alt="会員登録"></a>
                                    </li>
                                    <li>
                                        <a href="{{ path('cart') }}"><img class="hover_change_image" src="{{ app.config.tpl }}img/common/btn_header_cart.jpg" alt="カゴの中を見る"></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                {# ▲上ナビ #}
            </div>
        {# ▲HEADER #}

        <div id="container" class="clearfix">
            {# ▼TOP COLUMN#}
            {% if PageLayout.TopNavi %}
                <div id="topcolumn">
                    {# ▼上ナビ #}
                    {{ include('block.twig', {'Blocs': PageLayout.TopNavi}) }}
                    {# ▲上ナビ #}
                </div>
            {% endif %}
            {# ▲TOP COLUMN#}

            {# ▼LEFT COLUMN #}
            {% if PageLayout.LeftNavi %}
                <div id="leftcolumn" class="side_column">
                    {# ▼左ナビ #}
                    {{ include('block.twig', {'Blocs': PageLayout.LeftNavi}) }}
                    {# ▲左ナビ #}
                </div>
            {% endif %}
            {# ▲LEFT COLUMN #}

            {# ▼CENTER COLUMN #}
            <div id="main_column" class="colnum{{ PageLayout.ColumnNum }}{% if PageLayout.ColumnNum == 2 %} {% if PageLayout.LeftNavi|length == 0 %}left{% else %}right{% endif %}{% endif %}">
                {# ▼メイン上部 #}
                {% if PageLayout.MainHead %}
                    {{ include('block.twig', {'Blocs': PageLayout.MainHead}) }}
                {% endif %}
                {# ▲メイン上部 #}

                {# ▼メイン #}
                {% block main %}{% endblock %}
                {# ▲メイン #}

                {# ▼メイン下部 #}
                {% if PageLayout.MainFoot %}
                    {{ include('block.twig', {'Blocs': PageLayout.MainFoot}) }}
                {% endif %}
                {# ▲メイン下部 #}
            </div>
            {# ▲CENTER COLUMN #}

            {# ▼RIGHT COLUMN #}
            {% if PageLayout.RightNavi %}
                <div id="rightcolumn" class="side_column">
                    {# ▼右ナビ #}
                    {{ include('block.twig', {'Blocs': PageLayout.RightNavi}) }}
                    {# ▲右ナビ #}
                </div>
            {% endif %}
            {# ▲RIGHT COLUMN #}

            {# ▼BOTTOM COLUMN#}
            {% if PageLayout.BottomNavi %}
                <div id="bottomcolumn">
                    {# ▼下ナビ #}
                    {{ include('block.twig', {'Blocs': PageLayout.BottomNavi}) }}
                    {# ▲下ナビ #}
                </div>
            {% endif %}
            {# ▲BOTTOM COLUMN#}

        </div>
        {# ▲CONTENTS #}

        {# ▼FOOTER #}
        {% if PageLayout.footer_chk != 2 %}
            <!--▼FOOTER-->
            <div id="footer_wrap">
                <div id="footer" class="clearfix">
                    <div id="pagetop"><a href="#top">このページの先頭へ</a></div>
                    <div id="copyright">Copyright ©
                        {% if app.config.release_year != 'now'|date("Y") %}{{ app.config.release_year }}-{% endif %}{{ 'now'|date("Y") }}
                        {{ BaseInfo.shop_name_eng|default(BaseInfo.shop_name) }} All rights reserved.
                    </div>
                </div>
            </div>
            <!--▲FOOTER-->
        {% endif %}
        {# ▲FOOTER #}

        {# ▼FooterBottom COLUMN#}
        {% if PageLayout.FooterBottomNavi %}
            <div id="footerbottomcolumn">
                {# ▼上ナビ #}
                {{ include('block.twig', {'Blocs': PageLayout.FooterBottomNavi}) }}
                {# ▲上ナビ #}
            </div>
        {% endif %}
        {# ▲FooterBottom COLUMN#}
    </div>
</body>
</html>
