{% extends 'Admin/main_frame.twig' %}

{% block main %}

    {% for message in app.session.flashbag.get('page.complete') %}
        {{ message|trans|raw }}<br/>
    {% endfor %}

    <h2>編集可能ページ一覧</h2>
    <div class="btn addnew">
        <a class="btn-normal" href="?device_type_id=<!--{$device_type_id|u}-->"><span>ページを新規入力</span></a>
    </div>
    <table class="list">
        <col width="70%"/>
        <col width="10%"/>
        <col width="10%"/>
        <col width="10%"/>
        <tr>
            <th>名称</th>
            <th>レイアウト</th>
            <th>ページ詳細</th>
            <th>削除</th>
        </tr>
        {% for Page in PageLayouts %}
            <tr style="{%  if Page.page_id == page_id %}background-color: {{ app.config.select_rgb }};{% endif %}">
                <td>
                    {{ Page.name }}
                </td>
                <td class="center">
                    <a href="{{ url('admin_design') }}?page_id={{ Page.page_id }}&device_type_id={{ Page.device_type_id }}">編集</a>
                </td>
                <td class="center">
                    {% if Page.filename|length > 1 %}
                        <a href="{{ url('admin_content_page_edit', {'page_id':Page.page_id}) }}">編集</a>
                    {% endif %}
                </td>
                <td class="center">
                    {% if Page.edit_flg == 1 %}
                        <a href="{{ url('admin_content_page_delete', {'page_id':Page.page_id}) }}">削除</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}